{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "noImplicitAny": true,
        "noEmitOnError": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "skipLibCheck": true,
        "rootDir": "."
    },
    "include": [
        "src/*.ts",
    ],
    "exclude": ["node_modules"],
    "ts-node": {
      "transpileOnly": true,
      "files": true
    }
}
